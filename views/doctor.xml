<?xml version="1.0" encoding="utf-8"?>
<odoo>


         <record model="ir.ui.view" id="view_sale_order_kanban">
            <field name="name">hospital.doctor.kanban</field>
            <field name="model">hospital.doctor</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="age"/>
                    <field name="gender"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_details">
                                    <ul>
                                        <li>
                                            Name : <field name="name" />
                                        </li>
                                        <li>
                                            Age : <field name="age" />
                                        </li>
                                        <li>
                                            ender : <field name="gender" />
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record id="doctor_tree" model="ir.ui.view">
            <field name="name">hospital.doctor.tree</field>
            <field name="model">hospital.doctor</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree delete="true">
                    <field name="name"/>
                    <field name="age"/>
                    <field name="gender"/>
                </tree>
            </field>
        </record>

        <record id="doctor_form" model="ir.ui.view">
            <field name="name">hospital.doctor.form</field>
            <field name="model">hospital.doctor</field>
            <field name="arch" type="xml">
                <form delete="true">
                     <header>
                            <button name="confirm" class="btn-primary" string="Confirm"
                            type="object"/>
                            <button name="done" class="btn-success" string="Done" 
                            type="object"/>
                            <button name="cancel" class="btn-warning" string="Cancel" 
                            type="object"/>
                            <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="sequence" readonly="1" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="age"/>
                            </group>
                            <group>
                                <field name="gender"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="list of patients">
                                <field name="patients">
                                    <tree >
                                        <field name="name"/>
                                        <field name="age"/>
                                        <field name="gender"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="doctor_action" model="ir.actions.act_window">
            <field name="name">Doctors</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.doctor</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first doctor
                </p>
            </field>
        </record>

        <!-- Top menu item -->
        <menuitem id="hospital_root"
            name="Hospital"
            sequence="10"/>

        <menuitem id="hospital_doctor_root"
            name="Doctors"
            parent="hospital_root"
            sequence="10"/>
        
        <menuitem id="hospital_doctor"
            name="Doctors"
            parent="hospital_doctor_root"
            action="doctor_action"
            sequence="10"/>


</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <!-- 'My Pipeline' menu : Server action, act_window_views and act_windows -->
        <record model="ir.actions.act_window" id="patient_appointment">
            <field name="name">Appointments</field>
            <field name="res_model">hospital.appointment</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('patient','in',active_id)]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.ui.view" id="board_patient_kanban">
            <field name="name">hospital.patient.kanban</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="age"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('hospital.patient', 'image', record.id.raw_value)" alt="patient"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    <div class="o_kanban_tags_section">
                                    <ul>
                                        <li><strong>Age: <field name="age"></field></strong></li>
                                    </ul>
                                    </div>
                                    <div name="tags"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="board_patient_tree" model="ir.ui.view">
            <field name="name">hospital.patient.tree</field>
            <field name="model">hospital.patient</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree delete="true" >
                    <field name="image" widget="image" class="oe_avatar" 
                    options="{&quot;size&quot;: [50, 50]}" />
                    <field name="name"/>
                    <field name="age"/>
                    <field name="email"/>
                    <field name="gender"/>
                    <field name="operation_date"/>
                    <field name="operation_name"/>
                    <field name="amount_due"/>
                    <field name="total"/>
                    <field name="status_payment"/>
                    <field name="end_date"/>
                    <field name="operation_price" sum='total price' widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <field name="currency_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="board_patient_form" model="ir.ui.view">
            <field name="name">hospital.patient.form</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <form delete="true">
                    <header>
                            <button name="open" class="btn-primary" string="Open"
                            type="object"/>
                            <button name="paid" class="btn-success" string="Paid" 
                            type="object"/>
                            <button name="confirm" class="btn-warning" string="confirm" 
                            type="object"/>
                            <button name="send_mail" class="oe_highlight" string="Send By Email" 
                            type="object"/>
                            <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box">
                            <button name="patient_appointment" class="oe_stat_button" 
                                type="object" icon="fa-calendar" >
                                <field name="counter" string="Appointments" widget="statinfo"/>
                            </button>
                            <button name="patient_paid" class="oe_stat_button" 
                                type="object" icon="fa-usd" >
                                <field name="open_state" string="Open" widget="statinfo"/>
                            </button>

                            <!-- <button name="%(patient_appointment)d" class="oe_stat_button" 
                                type="action" icon="fa-calendar" >
                                <field name="counter" string="Appointments" widget="statinfo"/>
                            </button> -->
                        </div>
                        
                        <field name="image" widget='image' class="oe_avatar"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                            <h2>
                                <field name="sequence" readonly="1" />
                            </h2>
                        </div>
                        <group>
                            <group>
                                <field name="age"/>
                                <field name="gender"/>
                                <field name="operation_date" options="{'datepicker':{'minDate': 'now'}}"/>
                            </group>
                            <group>
                                <field name="operation_name"/>
                                <field name="doctor"/>
                                <field name="end_date"/>
                            </group>
                            <group>
                                <field name="operation_price" widget="monetary" options="{'currency_field': 'currency_id'}"
                                    attrs="{'readonly':[('status_payment','=','Paid')]}"/> 
                                <field name="amount_due" widget="monetary" options="{'currency_field': 'currency_id'}" 
                                    attrs="{'readonly':[('status_payment','=','Paid')]}"/>
                                <field name="total" widget="monetary" options="{'currency_field': 'currency_id'}"
                                    attrs="{'readonly':[('status_payment','=','Paid')]}"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="status_payment"/>
                                <field name="payment_terms"/>
                                <field name="email"/>
                            </group>
                        </group>
                    </sheet>
                    <group>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                    </group>
                </form>
            </field>
        </record>

        <record id="patient_action" model="ir.actions.act_window">
            <field name="name">Patients</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.patient</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first patient
                </p>
            </field>
        </record>

        <!-- Top menu item -->
        <menuitem id="hospital_root"
            name="Hospital"
            sequence="10"/>

        <menuitem id="hospital_patient_root"
            name="Patients"
            parent="hospital_root"
            sequence="10"/>
        
        <menuitem id="hospital_patient"
            name="Patients"
            parent="hospital_patient_root"
            action="patient_action"
            sequence="10"/>


</odoo>
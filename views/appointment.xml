        <record model="ir.ui.view" id="view_sale_order_kanban">
            <field name="name">hospital.appointment.kanban</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="sequence"/>
                    <field name="appointment_date"/>
                    <field name="note"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="note"/></strong>
                                    <div class="o_kanban_tags_section">
                                        <strong><field name="note"/></strong>
                                    </div>
                                    <ul>
                                        <li><strong>Appointment Date: <field name="appointment_date"></field></strong></li>
                                    </ul>
                                    <div name="tags"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record id="patient_tree" model="ir.ui.view">
            <field name="name">hospital.appointment.tree</field>
            <field name="model">hospital.appointment</field>
            <field name="priority">2</field>
            <field name="arch" type="xml" >
                <tree delete="true">
                    <field name="appointment_date"/>
                    <field name="note"/>
                </tree>
            </field>
        </record>

        <record id="patient_form" model="ir.ui.view">
            <field name="name">hospital.appointment.form</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <form delete="true">
                    <header>
                             
                            <button name="confirm" class="btn-primary" string="Confirm"
                            type="object"/>
                            <!--<button name="done" class="btn-success" string="Done" 
                            type="object"/>
                            <button name="cancel" class="btn-warning" string="Cancel" 
                            type="object"/>-->
                            <button  class="oe_highlight design" string="Send By Email" 
                            name="send_mail"
                            type="object"/> 
                            <button  class="design" string="css"
                            type="object"/> 
                            <button  class="oe_highlight" string="get name" 
                            name="get_patient"
                            type="object"/> 
                            <button name="delete" class="btn-danger" string="delete" 
                            type="object"/>
                            <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <!-- <field name="image" widget='image' class="oe_avatar"/> -->
                        <div class="oe_title">
                            <!-- <h1>
                                <field name="appointment_date"/>
                            </h1> -->
                            <h2>
                                <field name="sequence" readonly="1" />
                            </h2>
                        </div>
                        <group>
                            <group>
                                <!-- <field name="age"/> -->
                                <field name="appointment_date" options="{'datepicker':{'minDate': 'now'}}"/>
                            </group>
                            <group>
                                <field name="note"/>
                                <field name="patient" options="{'no_create_edit':True,'no_create':True,'no_open':True}"/>
                                <!-- <field name="patient" options="{'no_create_edit':True,'no_create':True,'no_open':True}"/> -->
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="appointment_action" model="ir.actions.act_window">
            <field name="name">Appointments</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.appointment</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first appointment
                </p>
                <p class="design">
                    css design
                </p>
            </field>
        </record>


<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record model="ir.ui.view" id="board_payment_kanban">
            <field name="name">hospital.payment.kanban</field>
            <field name="model">hospital.payment</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="value"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    <div class="o_kanban_tags_section">
                                    <ul>
                                        <li><strong>Value: <field name="value"></field></strong></li>
                                    </ul>
                                    </div>
                                    <div name="tags"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="board_payment_tree" model="ir.ui.view">
            <field name="name">hospital.payment.tree</field>
            <field name="model">hospital.payment</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree delete="true">
                    <field name="name"/>
                    <field name="value"/>
                </tree>
            </field>
        </record>

        <record id="board_payment_form" model="ir.ui.view">
            <field name="name">hospital.payment.form</field>
            <field name="model">hospital.payment</field>
            <field name="arch" type="xml">
                <form delete="true">
                    <sheet>
                        <div class="oe_title">
                            <h2>
                                <field name="sequence" readonly="1" />
                            </h2>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="value"/>
                            </group>
                        </group>
                    </sheet>
                    <group>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                    </group>
                </form>
            </field>
        </record>

        <record id="payment_action" model="ir.actions.act_window">
            <field name="name">payments</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.payment</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first payment condition
                </p>
            </field>
        </record>

        <!-- Top menu item -->
        <menuitem id="hospital_root"
            name="Hospital"
            sequence="10"/>

        <menuitem id="hospital_payment_root"
            name="payments"
            parent="hospital_root"
            sequence="10"/>
        
        <menuitem id="hospital_payment"
            name="payments"
            parent="hospital_payment_root"
            action="payment_action"
            sequence="10"/>


</odoo>
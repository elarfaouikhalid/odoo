<?xml version="1.0" ?>
<odoo>

    <!-- Mail template are declared in a NOUPDATE block
         so users can freely customize/delete them -->
    <data noupdate="1">
        <!--Email template -->
        <record id="patient_card_email_template" model="mail.template">
            <field name="name">Patient: Send by email</field>
            <field name="model_id" ref="hospital.model_hospital_patient"/>
            <field name="email_from">${object.user_id.email_formatted |safe}</field>
            <field name="email_to">${object.email}</field>
            <field name="subject">Patient card (Ref ${object.sequence})</field>
            <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
                <p style="margin: 0px; padding: 0px; font-size: 13px;">
                    Dear ${object.name}
                    <br /><br />
                    Here is your price not paid ${object.total}
                    <br /><br />
                    Age : ${object.age}
                    <br /><br />
                    Do not hesitate to contact us if you have any question.
                </p>
            </div>
            </field>
            <!-- <field name="report_template" ref="hospital_doctor_reporting"/> -->
            <!-- <field name="report_name">${object.sequence}</field> -->
        </record>
    </data>
</odoo>
